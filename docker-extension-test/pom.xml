<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <parent>
        <groupId>org.ballerinax.docker</groupId>
        <version>0.992.0-m2-SNAPSHOT</version>
        <relativePath>../pom.xml</relativePath>
        <artifactId>docker-extension-parent</artifactId>
    </parent>

    <modelVersion>4.0.0</modelVersion>
    <artifactId>docker-extension-test</artifactId>
    <packaging>jar</packaging>
    <name>Ballerinax - Docker Extension Tests</name>
    <url>https://ballerina.io</url>

    <dependencies>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-api</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-log4j12</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.ballerinax.docker</groupId>
            <artifactId>docker-generator</artifactId>
        </dependency>
        <dependency>
            <groupId>org.ballerinax.docker</groupId>
            <artifactId>docker-extension</artifactId>
        </dependency>
        <dependency>
            <groupId>com.spotify</groupId>
            <artifactId>docker-client</artifactId>
        </dependency>
        <dependency>
            <groupId>org.testng</groupId>
            <artifactId>testng</artifactId>
            <version>${testng.version}</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>commons-codec</groupId>
            <artifactId>commons-codec</artifactId>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>verify</phase>
                    </execution>
                </executions>
                <configuration>
                    <argLine>${jacoco.agent.argLine}</argLine>
                    <environmentVariables>
                        <BAL_DOCKER_WINDOWS>
                            ${env.BAL_DOCKER_WINDOWS}
                        </BAL_DOCKER_WINDOWS>
                    </environmentVariables>
                    <systemPropertyVariables>
                        <ballerina.pack>
                            ${project.basedir}/../docker-extension-balo/target/extracted-distribution/jballerina-tools-${ballerina.lang.version}/
                        </ballerina.pack>
                        <sample.dir>
                            ${project.build.directory}/../../samples
                        </sample.dir>
                        <runtime.dockerfile>
                            ${project.build.directory}/../../base/docker/runtime.Dockerfile
                        </runtime.dockerfile>
                        <dockerfile.windows>
                            ${project.build.directory}\\..\\..\\base\\docker\\DockerfileWindows
                        </dockerfile.windows>
                        <docker.image.version>
                            ${project.version}
                        </docker.image.version>
                        <jacoco.agent.argLine>${jacoco.agent.argLine}</jacoco.agent.argLine>
                    </systemPropertyVariables>
                    <suiteXmlFiles>
                        <suiteXmlFile>src/test/resources/testng.xml</suiteXmlFile>
                    </suiteXmlFiles>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.jacoco</groupId>
                <artifactId>jacoco-maven-plugin</artifactId>
                <goals>
                    <goal>report</goal>
                </goals>
                <configuration>
                    <dataFile>${project.build.directory}/coverage-reports/jacoco.exec</dataFile>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.7.0</version>
                <configuration>
                    <source>1.8</source>
                    <target>1.8</target>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
